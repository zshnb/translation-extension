{
    "version": "1.0.0",
    "manifest_version": 3,
    "name": "Useful Translation",
    "icons": {
        "16": "assets/logo.png",
        "32": "assets/logo.png",
        "48": "assets/logo.png",
        "128": "assets/logo.png"
    },
    "action": {
        "default_popup": "js/index.html",
        "default_title": "Useful Translation"
    },
    "content_scripts": [
        {
            "matches": ["https://*/*"],
            "js": ["js/content_script.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/logo.png"
            ],
            "matches": ["https://*/*"]
        }
    ]
}